<%- include('includes/head') -%> <%- include('includes/nav') -%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Cadastro</h1>
      <p class="text-center lead">Crie sua conta abaixo</p>
      <%- include('includes/messages') -%>
      <div class="row">
        <div class="col-lg">
          <h4>Cadastrar</h4>

          <form action="/cadastro/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-group">
              <label for="email">Email:</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                aria-describedby="emailHelp"
                placeholder="login.user@gmail.com"
              />
              <small id="emailHelp" class="form-text text-muted"
                >Nunca iremos compartilhar seu email com ninguÃ©m.</small
              >
            </div>

            <div class="form-group">
              <label for="password">Senha:</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="user123"
              />
              <small id="emailHelp" class="form-text text-muted"
                >A senha precisa ter de 3 a 50 caracteres.</small
              >
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary px-5 mt-4">
                Cadastrar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') -%>
